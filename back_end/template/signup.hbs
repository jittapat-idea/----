<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card sp-card">
                    <div class="card-header">
                        <h1 class="text-center">Signup</h1>
                    </div>
                    <div class="card-body">
                        <form action="/signup" method="post">
                            <div class="form-group">
                                <label for="email">Email</label>
                                 <input type="email" class="form-control" name="email" id="email" placeholder="Your cdti email">
                            </div>
                            <div class="form-group">
                                <label for="name">Name</label>
                                 <input type="name" class="form-control" name="name" id="name" placeholder="Your name">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Your password">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                            <div class="input-field mt-3">
                                <p class="text-center">already have an account? >> <a href="/login" class="text-decoration-none text-white"> Login </a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="wave"></div>
        <div class="wave"></div>
        <div class="wave"></div>
    </div>

